%h2 New post

- require_js 'admin/jquery', 'admin/posts/slug', 'admin/posts/preview'
  
- form_for(@post, :action => url(:admin_posts), :id => 'post') do
  %p= text_control :title, :label => "Title"
  %p= text_control :slug, :label => "Slug"
  %p= text_area_control :body, :label => "Body"
  %p= select_control :format, :label => "Format", :collection => Formatter.formatters, :selected => MenkiConfig.default_post_format
  %p
    = submit_button "Publish"
    = submit_button "Save as Draft"
